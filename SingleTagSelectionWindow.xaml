<Window x:Class="AssetDatabaseManager.SingleTagSelectionWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:AssetDatabaseManager.WindowElements"
    Title="Edit Tag" 
    WindowStartupLocation="CenterOwner"
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Select a tag to edit:" Margin="0,0,0,5"/>
        <controls:TagTogglePanel x:Name="ttpSelector" DockPanel.Dock="Top" Height="Auto" MinHeight="100" Width="240" />
        <Button Content="Cancel" Width="60" Click="Cancel_Click" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
